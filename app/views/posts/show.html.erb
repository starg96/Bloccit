<h1><%= markdown_to_html @post.title %></h1>

<div class="row">
  <div class="col-md-8">
  	<small>
       <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
       submitted <%= time_ago_in_words(@post.created_at) %> ago by
       <%= @post.user.name %>
  	</small>
    <p><%= markdown_to_html @post.body %></p>
  </div>
</div>
  <!-- We want to render all of the comments -->
<div class="row">
  <h3> Comments </h3>
    <ol>
      <%= render partial: "comments/comment", collection: @post.comments %>
    </ol>
</div>
  <!-- We want to render a form for creating new comments (WOOHOO) -->

    <p><%= render partial: "comments/form", locals: {topic: @post.topic, post: @post, user: current_user} %></p>

  <div class="col-md-4">
    <% if policy(@post).edit? %>
    	<%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

